<UserControl x:Class="Shop_bestellsystem.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shop_bestellsystem"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="200">
    
    <Border CornerRadius="10" Background="DimGray">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="searchContent" Grid.Column="0" Text="Bitte text eingeben" FontSize="22" GotFocus="SearchContent_GotFocus"/>
            <Image x:Name="searchButton" Grid.Column="1" Source="/src/assets/searchbar_icon.png" Cursor="Hand" MouseDown="Searching"/>

        </Grid>
    </Border>
</UserControl>

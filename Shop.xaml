<Page x:Class="Shop_bestellsystem.Shop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shop_bestellsystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Shop">

    <Grid x:Name="grid" Background="#E5E2E0">
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="87*"/>
        </Grid.RowDefinitions>


        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="1" Style="{StaticResource ProductScrollBar}">
            <WrapPanel x:Name="wrapper">
                <local:ProductTemplate Width="300" Height="150" Margin="50,30,0,0" Alias="Gutschein" Description="hallo" Price="18.23" DeliveryTime="8" ButtonClicked="ProductTemplate_ButtonClicked"/>
                <local:ProductTemplate Width="300" Height="150" Margin="50,30,0,0" Alias="Buch" Description="hallo" Price="28.22" DeliveryTime="3" ButtonClicked="ProductTemplate_ButtonClicked"/>
            </WrapPanel>
        </ScrollViewer>

    </Grid>
</Page>
